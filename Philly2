-- Services
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

-- Variables
local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local HumanoidRootPart = Character:WaitForChild("HumanoidRootPart")
local Humanoid = Character:WaitForChild("Humanoid")

-- Coordinates for the fast movement
local pointA = Vector3.new(2454.063720703125, 285.8049621582031, -1341.2506103515626)
local pointB = Vector3.new(2473.269775390625, 285.8037414550781, -1341.27783203125)

-- UI Creation
local playerGui = LocalPlayer:WaitForChild("PlayerGui")
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "AutoMoveUI"
screenGui.Parent = playerGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 80)
frame.Position = UDim2.new(0.5, -100, 0.5, -40)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.BorderColor3 = Color3.fromRGB(20, 20, 20)
frame.Draggable = true
frame.Parent = screenGui

local title = Instance.new("TextLabel")
title.Text = "Super Speed"
title.Size = UDim2.new(1, 0, 0, 25)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
title.TextColor3 = Color3.new(1, 1, 1)
title.Parent = frame

local toggleButton = Instance.new("TextButton")
toggleButton.Text = "START"
toggleButton.Size = UDim2.new(0.9, 0, 0, 40)
toggleButton.Position = UDim2.new(0.05, 0, 0.4, 0)
toggleButton.BackgroundColor3 = Color3.fromRGB(50, 150, 50)
toggleButton.TextColor3 = Color3.new(1, 1, 1)
toggleButton.Parent = frame

-- Scripting the logic
local isRunning = false
local connection = nil

-- This function will make the character's body visible
local function makeCharacterVisible()
    for _, part in ipairs(Character:GetDescendants()) do
        if part:IsA("BasePart") then
            -- Set LocalTransparencyModifier to 0 to make the part fully opaque
            part.LocalTransparencyModifier = 0
        end
    end
end

local function onRenderStep()
    if isRunning then
        -- Move the character super fast
        local currentPos = HumanoidRootPart.Position
        local targetPos = (currentPos.X == pointA.X) and pointB or pointA
        
        -- Use CFrame for instant teleportation
        HumanoidRootPart.CFrame = CFrame.new(targetPos)

        -- Spam the 'E' key at a super fast rate
        UserInputService:SimulateKeyPress(Enum.KeyCode.E)
        
        -- Call the function to ensure visibility every frame
        makeCharacterVisible()
    end
end

toggleButton.MouseButton1Click:Connect(function()
    isRunning = not isRunning
    if isRunning then
        -- Move the character to the starting point before starting the loop
        HumanoidRootPart.CFrame = CFrame.new(pointA)
        
        toggleButton.Text = "STOP"
        toggleButton.BackgroundColor3 = Color3.fromRGB(150, 50, 50)
        connection = RunService.RenderStepped:Connect(onRenderStep)
    else
        toggleButton.Text = "START"
        toggleButton.BackgroundColor3 = Color3.fromRGB(50, 150, 50)
        if connection then
            connection:Disconnect()
            connection = nil
        end
    end
end)

print("Super Speed script loaded successfully.")
