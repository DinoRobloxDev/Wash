local Players = game:GetService("Players")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local rootPart = character:WaitForChild("HumanoidRootPart")

local MAX_DISTANCE = 10000 -- Far enough so you can always interact

local function enableAllWashingMachinePrompts()
    for _, wm in ipairs(workspace:GetDescendants()) do
        if wm.Name == "WashingMachine" and wm:FindFirstChild("Interaction") then
            local interaction = wm.Interaction
            local prompt = interaction:FindFirstChildOfClass("ProximityPrompt")
            if prompt then
                prompt.MaxActivationDistance = MAX_DISTANCE
                prompt.RequiresLineOfSight = false
                print("WashingMachine prompt updated:", wm:GetFullName())
            end
        end
    end
end

-- Run once
enableAllWashingMachinePrompts()
